<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="STUDENT 1"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#039314"
            android:id="@+id/s1"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/star"
            android:layout_below="@id/s1"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/i1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/i1"
            android:layout_alignTop="@id/i1"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="casual"
            android:textColor="#0c0ca6"
            android:text="15 years"
            android:id="@+id/s1d1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#000000"
            android:layout_toRightOf="@id/i1"
            android:layout_below="@id/s1d1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/v1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_toRightOf="@id/i1"
            android:layout_below="@id/v1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="casual"
            android:textColor="#0c0ca6"
            android:text="Male"
            android:id="@+id/s1d2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#000000"
            android:layout_toRightOf="@id/i1"
            android:layout_below="@id/s1d2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/v2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_alignBottom="@id/i1"
            android:layout_toRightOf="@id/i1"
            android:layout_below="@id/v2"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="casual"
            android:textColor="#0c0ca6"
            android:text="HardCoder"
            android:id="@+id/s1d3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FF06FF"
            android:layout_below="@id/i1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/v3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:text="Description"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:id="@+id/d1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/d1"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sed hendrerit dui. Etiam in ultrices enim. Curabitur luctus, orci ac porta ultrices, mi eros lobortis risus, sed dictum velit dui at eros. Aenean blandit hendrerit nunc, sed aliquam magna consequat ut. Sed interdum, mauris id hendrerit pellentesque, ex metus pretium nibh, sit amet placerat nunc ipsum sed lectus."
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            />

    </RelativeLayout>

</ScrollView>
