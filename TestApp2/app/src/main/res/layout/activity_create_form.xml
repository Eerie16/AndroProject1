<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f51f2bf">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Entry"
            android:textSize="50sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000001"
            android:id="@+id/h1"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/h1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/i1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/i1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/h1"
            android:layout_alignBottom="@id/i1"
            android:text="Upload Pic"
            android:id="@+id/b1"
            android:onClick="imgprocess"
            android:background="#bb2812ba"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/i1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Name:"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/name1"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/name1"
            android:layout_below="@id/i1"
            android:hint="Your Name Here"
            android:id="@+id/inname"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/name1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="Age:"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/age1"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/age1"
            android:layout_below="@id/inname"
            android:layout_marginTop="10dp"
            android:text="-"
            android:id="@+id/ageminus"
            android:background="#ec2327"
            android:textStyle="bold"
            android:onClick="decage"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_below="@id/inname"
            android:layout_toRightOf="@id/ageminus"
            android:layout_marginTop="10dp"
            android:text="15"
            android:id="@+id/inage"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/inage"
            android:layout_below="@id/inname"
            android:layout_marginTop="10dp"
            android:text="+"
            android:id="@+id/ageplus"
            android:textStyle="bold"
            android:background="#1bc108"
            android:onClick="incage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/age1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="One Line Description:"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/desc1"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_below="@id/ageplus"
            android:layout_toRightOf="@id/desc1"
            android:layout_alignBottom="@id/desc1"
            android:hint="Eg Dev guy"
            android:layout_marginTop="10dp"
            android:id="@+id/indesc1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/desc1"
            android:layout_marginTop="10dp"
            android:text="Detailed Description"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#6c6c6c"
            android:id="@+id/desc2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_below="@id/indesc1"
            android:layout_toRightOf="@id/desc2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/v"/>
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Enter your detailed desription here. This could be multiline text."
            android:textColor="#313131"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:text="Contact :"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/cont"
        android:textStyle="bold"
        android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:gravity="center"
            android:layout_toRightOf="@id/cont"
            android:id="@+id/incont"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/incont"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:text="SUBMIT AND Boom!"
            android:onClick="alertfunc"
            />




    </RelativeLayout>



</ScrollView>
